{
  "name": "thekselect",
  "version": "1.0.0",
  "description": "A headless, framework-agnostic select library with themes.",
  "type": "module",
  "main": "./dist/thekselect.umd.cjs",
  "module": "./dist/thekselect.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/thekselect.js",
      "require": "./dist/thekselect.umd.cjs"
    },
    "./css/*": "./dist/css/*"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --open /showcase/index.html",
    "build": "vite build && tsc && mkdir -p dist/css && cp src/themes/*.css dist/css/",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "keywords": [
    "select",
    "autocomplete",
    "multiselect",
    "tagging",
    "headless",
    "accessible",
    "aria"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.1",
    "jsdom": "^28.0.0",
    "typescript": "^5.4.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
